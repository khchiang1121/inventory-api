# =============================================================================
# INVENTORY API DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to env.local and modify the values according to your setup
# The env.local file will be automatically loaded by the devcontainer

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=inventory_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
DATABASE_HOST=postgres
DATABASE_PORT=5432

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@inventory.local
PGADMIN_DEFAULT_PASSWORD=
PGADMIN_CONFIG_SERVER_MODE=False

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
# Uncomment and configure these if you're behind a corporate proxy

# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# FTP_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,*.local,*.company.com

# Proxy authentication (if required)
# PROXY_USER=your-username
# PROXY_PASS=your-password

# =============================================================================
# APT REPOSITORY CONFIGURATION
# =============================================================================
# Uncomment to use custom APT repositories (useful in restricted networks)

# APT_MIRROR=http://archive.ubuntu.com/ubuntu
# APT_SECURITY_MIRROR=http://security.ubuntu.com/ubuntu

# =============================================================================
# PIP CONFIGURATION
# =============================================================================
# Uncomment to use custom PyPI mirror or trusted hosts

# PIP_INDEX_URL=https://pypi.org/simple
# PIP_TRUSTED_HOST=pypi.org,pypi.python.org,files.pythonhosted.org
# PIP_EXTRA_INDEX_URL=https://your-internal-pypi.company.com/simple

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
# Configure git user (optional, can also be set globally)

# GIT_USER_NAME=Your Name
# GIT_USER_EMAIL=your.email@company.com

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Uncomment if you need to disable SSL verification (not recommended for production)

# PYTHONHTTPSVERIFY=0
# CURL_CA_BUNDLE=""
# REQUESTS_CA_BUNDLE=""

# Custom CA bundle path
# CUSTOM_CA_BUNDLE=/path/to/ca-bundle.crt

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================
# Django Debug Toolbar
DJANGO_DEBUG_TOOLBAR=1

# SQL Logging
SQL_DEBUG=0

# Email backend for development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API versioning
API_VERSION=v1

# API rate limiting
API_RATE_LIMIT=1000/hour

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_TO_FILE=1
LOG_DIR=/workspace/logs

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database
TEST_DATABASE_NAME=test_inventory_api

# Coverage settings
COVERAGE_REPORT=1